{
  "name": "elgin-printer-proxy",
  "description": "Proxy de ImpressÃ£o para Impressoras Elgin",
  "version": "0.1.1",
  "private": true,
  "main": "dist-electron/electron/index.js",
  "author": "Virtualy.tech",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.4"
  },
  "scripts": {
    "postinstall": "patch-package || echo 'patch skipped'",
    "rebuild:native:electron": "electron-rebuild -f -w @grandchef/node-printer",
    "rebuild:native:node": "node scripts/rebuild-node-printer-node.js",
    "ensure:native:electron": "node scripts/ensure-native.js electron",
    "ensure:native:node": "node scripts/ensure-native.js node",
    "build:runtime": "tsc -p tsconfig.json && npm run copy:public",
    "build:electron": "tsc -p electron/tsconfig.electron.json",
    "build": "npm run build:runtime && npm run build:electron",
    "dev:electron": "npm run ensure:native:electron && npm run build && cross-env ELECTRON_DEV=1 electron dist-electron/electron/index.js",
    "dev:server": "npm run ensure:native:node && ts-node-dev --respawn --transpile-only server.ts",
    "package:win": "npm run ensure:native:electron && npm run build && electron-builder  --publish=never --win nsis portable",
    "package": "npm run package:win",
    "clean": "rimraf dist-electron dist-runtime *.log && rimraf node_modules/@grandchef/node-printer/build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "copy:public": "cpy public/**/* dist-runtime/public --parents",
    "release:patch": "npm version patch -m \"chore: release %s\"",
    "release:minor": "npm version minor -m \"chore: release %s\"",
    "release:major": "npm version major -m \"chore: release %s\""
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.3.0",
    "cpy-cli": "5.0.0",
    "cross-env": "7.0.3",
    "electron": "37.4.0",
    "electron-builder": "26.0.12",
    "electronmon": "2.0.3",
    "rimraf": "5.0.10",
    "ts-node-dev": "2.0.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@grandchef/node-printer": "0.8.0",
    "@mapbox/node-pre-gyp": "2.0.0",
    "body-parser": "2.2.0",
    "cors": "2.8.5",
    "dotenv": "17.2.1",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "node-windows": "1.0.0-beta.8",
    "patch-package": "8.0.0",
    "uuid": "11.1.0",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "build": {
    "publish": null,
    "appId": "com.virtualy.printer-proxy",
    "productName": "Companion Vida Exame",
    "files": [
      "dist-electron/**/*",
      "dist-runtime/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "patches/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/@grandchef/node-printer/**"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
