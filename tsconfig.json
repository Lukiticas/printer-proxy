{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-runtime",
    "rootDir": ".",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "server.ts",
    "src/**/*",
    "src/service/**/*",
    "config/**/*",
    "electron"
  ],
  "exclude": [
    "dist-runtime",
    "dist-electron",
    "node_modules"
  ]
}