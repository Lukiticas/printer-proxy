{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist-electron",
    "rootDir": "../",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022"
  },
  "include": [
    "index.ts", // the main file inside electron/
    "**/*.ts", // any other .ts under electron/
    "../src/**/*.ts" // source files from src/
  ],
  "exclude": [
    "../dist-runtime",
    "../dist-electron",
    "../node_modules"
  ]
}